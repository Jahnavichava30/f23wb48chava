extends layout

block content
  h1= title
  p Laughter is the universal language of funny, transcending borders and cultures
  button(type="button", class="btn btn-primary",id="myButton", onclick="goFaster()") Press Me
  br
  #faster Increase The Speed
  br
  script.
    var mph = 20;
    var change = 1;
    function goFaster(){
      mph = mph + change;
      change = change + 1;
      document.getElementById('faster').textContent = `MPH ${mph} with change ${change}`
    }